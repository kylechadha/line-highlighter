{
  "manifest_version": 3,
  "name": "Line Highlighter",
  "description": "Line Highlighter is a simple, privacy focused extension that highlights your current position on any website",
  "homepage_url": "https://github.com/kylechadha/line-highlighter",
  "version": "2.1.4",
  "permissions": [
    "storage"
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "src/content-script.js"
      ]
    }
  ],
  "action": {
    "default_popup": "src/popup.html",
    "default_title": "Line Highlighter",
    "default_icon": {
      "128": "assets/icons/inactive.png"
    }
  },
  "icons": {
    "128": "assets/icons/inactive.png"
  }
}
