{
  "manifest_version": 3,
  "name": "Line Highlighter",
  "description": "Smart reading assistant that highlights your current position on any website.",
  "homepage_url": "http://kylechadha.com",
  "version": "2.0.0",
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content-script.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Line Highlighter"
  },
  "permissions": [
    "activeTab"
  ],
  "icons": {
    "128": "icon.png"
  }
}
