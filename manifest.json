{
  "manifest_version": 3,
  "name": "Line Highlighter",
  "description": "Line Highlighter highlights your current position on any website, allowing you to easily keep track of where you are",
  "homepage_url": "https://github.com/kylechadha/line-highlighter",
  "version": "2.1.0",
  "permissions": ["storage", "activeTab"],
  "background": {
    "service_worker": "src/background.js"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["src/content-script.js"]
    }
  ],
  "action": {
    "default_popup": "src/popup.html",
    "default_title": "Line Highlighter",
    "default_icon": {
      "16": "src/icons/highlighter-inactive.svg",
      "32": "src/icons/highlighter-inactive.svg",
      "48": "src/icons/highlighter-inactive.svg",
      "128": "src/icons/highlighter-inactive.svg"
    }
  }
}
