{
  "manifest_version": 2,
  "name": "Line Highlighter",
  "description": "This extension creates a full width yellow line wherever you click. There's also a blinking cursor so you can follow along while you read.",
  "homepage_url": "http://kylechadha.com",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": ["http://*/*"],
      "js": ["jquery.min.js", "content-script.js"],
      "css": ["styles.css"]
    }
  ],
  "browser_action": {
   "default_icon": "icon.png",
   "default_popup": "popup.html",
   "default_title": "Line Highlighter"
  },
  "permissions": [
   "activeTab"
   ]
}
