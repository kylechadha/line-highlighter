{
  "manifest_version": 3,
  "name": "Line Highlighter",
  "description": "Line Highlighter is a simple, privacy focused extension that highlights your current position on any website",
  "homepage_url": "https://github.com/kylechadha/line-highlighter",
  "version": "2.3.3",
  "permissions": [
    "storage"
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "src/content-script.js"
      ]
    }
  ],
  "action": {
    "default_popup": "src/popup.html",
    "default_title": "Line Highlighter",
    "default_icon": {
      "128": "assets/icons/inactive.png"
    }
  },
  "icons": {
    "128": "assets/icons/inactive.png"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "mac": "Alt+L",
        "windows": "Alt+H",
        "linux": "Alt+H",
        "chromeos": "Alt+H"
      }
    },
    "toggle-highlighter": {
      "suggested_key": {
        "mac": "Ctrl+E",
        "windows": "Alt+L",
        "linux": "Alt+L",
        "chromeos": "Alt+L"
      },
      "description": "Toggle highlighter"
    }
  }
}
