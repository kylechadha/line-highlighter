{
  "manifest_version": 2,
  "name": "Line Highlighter",
  "description": "This extension highlights your current position on any website. Helpful when reading text online -- keep track of where you are on the page.",
  "homepage_url": "http://kylechadha.com",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["jquery.min.js", "content-script.js"],
      "css": ["styles.css"]
    }
  ],
  "browser_action": {
   "default_icon": "icon.png",
   "default_popup": "popup.html",
   "default_title": "Line Highlighter"
  },
  "permissions": [
    "activeTab"
   ]
}
